<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WalletActivity">
    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/user_swipe_to_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="15sp"
                android:paddingRight="15sp"
                android:paddingTop="15sp"
                android:paddingBottom="15sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="50dp" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:id="@+id/textview_balance"
                        android:src="@drawable/logo"
                        android:gravity="center"
                        android:text="0000.00 â‚¬"
                        android:textSize="70dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="15sp"
                    android:padding="5dp"
                    android:elevation="2px"
                    android:background="@drawable/round_box">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Amount:"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/edittext_amount"
                        android:inputType="numberDecimal"
                        android:text="0"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="15sp"
                    android:padding="2.5dp"
                    android:gravity="center"
                    android:layout_marginTop="50dp"
                    android:elevation="2px">
                    <Button
                        android:id="@+id/btCashOut"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/transparent_bar"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:text="Cash Out"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="15sp"
                    android:padding="2.5dp"
                    android:elevation="2px"
                    android:gravity="center"
                    android:layout_marginTop="10dp">
                    <Button
                        android:id="@+id/btUpload"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/transparent_bar"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:text="Upload"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.design.widget.CoordinatorLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
    <include layout="@layout/navigation_drawer"></include>
</android.support.v4.widget.DrawerLayout>